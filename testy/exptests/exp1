<?php
declare(strict_types=1);

$a=0;
$b=2;
$c=3;
$d=0.5;
$e=2;

$a=-$b*($b-1)+2*$c*(1+$b-$c+5+2*2)-$c; // = 49

$b=(-1.1+(3*1.5)-0.4)*$d-$d+(1.0*0.0); // = 1.0

//$c=$e*$d+(2.5*2+$e)-($e-$d)*($e-2)+-4; // = 4.0

$y = $a + $b + $c;

write(
$a, " = 49\n",
$b, " = 1.0\n",
$c, " = 4.0\n",
$y, " = 54\n"
);